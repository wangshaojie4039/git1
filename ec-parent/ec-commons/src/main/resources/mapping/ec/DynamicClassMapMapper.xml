<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.imexue.ec.common.mapper.ec.DynamicClassMapMapper" >


  <select id="selectByDynamicId" resultType="cn.imexue.ec.common.model.DynamicClassMap">
	  select 
    <include refid="Base_Column_List" />
    from t_dynamic_class_map
    where dynamic_id = #{dynamicId,jdbcType=BIGINT}
  </select>
  
  <delete id="deleteByDynamicId">
  	DELETE from t_dynamic_class_map  where  dynamic_id=#{dynamicId,jdbcType=BIGINT}
  </delete>

  <select id="selectClassNameByDynamicId" resultType="java.lang.String">
	select  DISTINCT c.`name` from t_dynamic_class_map dcm left join t_class c
	on dcm.class_id=c.id
	where c.is_graduate=0 and c.is_delete=0 and  dynamic_id=#{dynamicId,jdbcType=BIGINT}
  </select>

  <sql id="Base_Column_List" >
    id, dynamic_id, class_id, create_time
  </sql>
</mapper>